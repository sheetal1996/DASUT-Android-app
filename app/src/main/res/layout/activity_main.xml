<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:fillViewport="false"
    android:background="#ffffff">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apk.dasut.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#ca00bcd4"
        android:text="Demographic Analysis of Service Usage Trends \n---------------------------" />

    <TextView
        android:id="@+id/androidid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="Android ID: " />
    <TextView
        android:id="@+id/androidid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:text="device id here" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="Email: " />
    <TextView
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:text="email here " />

    <TextView
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="Device: " />
    <TextView
        android:id="@+id/device2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:text="device here " />

    <TextView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="WiFi: " />
    <TextView
        android:id="@+id/wifi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:text="wifi speed here" />

    <TextView
        android:id="@+id/song_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="Songs: "
        android:layout_below="@id/email2"/>

    <TextView
        android:id="@+id/songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="List of Songs.... "
        android:layout_below="@id/song_label"/>

    <TextView
        android:id="@+id/apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="Apps: "
        android:layout_below="@id/songs"/>

    <TextView
        android:id="@+id/apps2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apps here "
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:layout_below="@id/email2"/>

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ca00bcd4"
        android:text="Location: "
        android:layout_below="@id/apps"/>
    <TextView
        android:id="@+id/loc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location here "
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:layout_below="@id/apps2"/>

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...more parameters to be added "
        android:textColor="#00bcd4"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:layout_below="@id/apps2"/>

    <Button
        android:id="@+id/push"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="SEND DATA" />

</LinearLayout>

</ScrollView>